<?xml version="1.0" encoding="UTF-8"?>
<Configuration xmlns="http://logging.apache.org/log4j/2.0/config">
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d{dd.MM.yyyy HH:mm:ss} [%t] %C (%F:%L) - %m%n"/>
        </Console>
        <File name="FILE" fileName="${basePath}/log.log" append="true">
            <PatternLayout pattern="%-5p %d{dd.MM.yyyy HH:mm:ss} [%t] %C (%F:%L) - %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <!-- ALL < Trace < Debug < Info < Warn < Error < Fatal < OFF -->
        <Root level="all">
            <AppenderRef ref="FILE"/>
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="ru.klem.http.server.MainApplication" level ="all"/>
        <Logger name="ru.klem.http.server.GreetingsWebApplication" level ="all"/>
        <Logger name="ru.klem.http.server.CalculatorWebApplication" level ="all"/>
    </Loggers>
</Configuration>